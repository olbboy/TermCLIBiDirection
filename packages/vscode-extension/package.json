{
    "name": "bidirection-bridge",
    "displayName": "BiDirection Bridge",
    "description": "Terminal-to-IDE bidirectional communication bridge â€” read code, apply edits, get diagnostics, and control your IDE from any terminal via Unix Domain Socket + JSON-RPC 2.0",
    "version": "1.0.0",
    "publisher": "dmdat",
    "license": "MIT",
    "icon": "images/icon.png",
    "pricing": "Free",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other",
        "Testing"
    ],
    "keywords": [
        "terminal",
        "bridge",
        "ipc",
        "socket",
        "bidirectional",
        "json-rpc",
        "automation"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/dmdat/bidirection"
    },
    "bugs": {
        "url": "https://github.com/dmdat/bidirection/issues"
    },
    "homepage": "https://github.com/dmdat/bidirection#readme",
    "galleryBanner": {
        "color": "#1a1a2e",
        "theme": "dark"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "bidirection.startBridge",
                "title": "BiDirection: Start Bridge Server"
            },
            {
                "command": "bidirection.stopBridge",
                "title": "BiDirection: Stop Bridge Server"
            },
            {
                "command": "bidirection.showStatus",
                "title": "BiDirection: Show Bridge Status"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "BiDirection Bridge",
            "properties": {
                "bidirection.autoStart": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically start the bridge server on VS Code startup"
                },
                "bidirection.socketPath": {
                    "type": "string",
                    "default": "",
                    "description": "Custom socket path (leave empty for default ~/.bidirection/bridge.sock)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --target=node18",
        "build": "npm run esbuild-base",
        "dev": "npm run esbuild-base -- --sourcemap --watch",
        "package": "npx -y @vscode/vsce package --no-dependencies"
    },
    "dependencies": {
        "@bidirection/core": "1.0.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "esbuild": "^0.20.2",
        "typescript": "^5.3.0"
    }
}
